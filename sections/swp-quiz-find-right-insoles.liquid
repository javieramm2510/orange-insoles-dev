{% liquid 
    assign headline = section.settings.headline
    assign sub = section.settings.sub
    assign button = section.settings.button
    assign url = section.settings.button_url
    assign image = section.settings.image
 %}

<div class="mb-60">
    <div class="relative h-[300px]">
        <div class="ds:mx-9 dm:max-w-screen-dm dm:mx-auto dm:px-10 dl:px-0">
            <div class="flex flex-col absolute z-10 w-full mt-20">
                <div class="font-bold text-[60px] text-[#272727] tracking-tighter leading-none w-4/12 mb-4">{{ headline }}</div>
                <div class="text-[24px] text-[#4E4E4E] w-4/12 mb-6">{{ sub }}</div>
                <a href="{{ url }}" title="{{ url.title }}" class="flex items-center justify-center font-bold text-[20px] text-center text-white bg-[#E68A3F] rounded-2xl w-[170px] px-10 py-4">{{ button }}</a>
            </div>
        </div>
        <img class="absolute -right-40 object-cover w-8/12 h-full" src="{{ image | image_url }}" alt="{{ image.alt }}" title="{{ image.title }}" loading="lazy">
    </div>
</div>


{% schema %}
{
    "name": "Image With Text Quiz",
    "settings": [
        {
            "type": "text",
            "id": "headline",
            "label": "Headline"
        },
        {
            "type": "text",
            "id": "sub",
            "label": "Subheadline"
        },
        {
            "type": "text",
            "id": "button",
            "label": "Link Text"
        },
        {
            "type": "url",
            "id": "button_url",
            "label": "Link URL"
        },
        {
            "type": "image_picker",
            "id": "image",
            "label": "Image"
        }
    ],
    "presets": [
        {
            "name": "Image With Text Quiz"
        }
    ]
}
{% endschema %}